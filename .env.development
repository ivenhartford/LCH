# Development Environment Configuration
# This file is for local development with Docker

FLASK_ENV=development
FLASK_DEBUG=true
SQLALCHEMY_ECHO=true

# Weak credentials OK for development
SECRET_KEY=dev-secret-key-not-for-production
POSTGRES_PASSWORD=dev_password_123
INITIAL_ADMIN_PASSWORD=admin123

# Development Database
POSTGRES_DB=vet_clinic_dev
POSTGRES_USER=vet_clinic_dev
POSTGRES_PORT=5432

# Service Ports
BACKEND_PORT=5000
FRONTEND_PORT=3000

# Less aggressive health checks in development
BACKEND_HEALTH_CHECK_START_PERIOD=60s
DB_WAIT_TIME=10

# Fewer workers for development
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=300

# CORS for development
CORS_ORIGINS=http://localhost:3000,http://localhost,http://127.0.0.1:3000

# Logging
LOG_LEVEL=DEBUG
REACT_APP_LOG_LEVEL=DEBUG

# Time Zone
TZ=America/New_York

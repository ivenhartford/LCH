# Production Environment Configuration Template
# CRITICAL: Update ALL values marked with CHANGE_ME before deploying!

FLASK_ENV=production
FLASK_DEBUG=false
SQLALCHEMY_ECHO=false

# CRITICAL: Generate with: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=CHANGE_ME_GENERATE_SECURE_64_CHAR_HEX

# Database - Use strong passwords!
POSTGRES_DB=vet_clinic_production
POSTGRES_USER=vet_clinic_prod
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD_HERE
POSTGRES_PORT=5432

# Service Ports
BACKEND_PORT=5000
FRONTEND_PORT=80

# Gunicorn - Adjust based on your server specs
# Rule of thumb: (2 x CPU_CORES) + 1
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
GUNICORN_MAX_REQUESTS=1000

# CORS - Add your production domain(s)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Initial Admin - CHANGE PASSWORD IMMEDIATELY AFTER FIRST LOGIN!
INITIAL_ADMIN_USERNAME=admin
INITIAL_ADMIN_PASSWORD=CHANGE_ME_IMMEDIATELY_AFTER_FIRST_LOGIN

# Security
SESSION_COOKIE_SECURE=true
ENABLE_HTTPS_REDIRECT=true
ENABLE_HSTS=true

# Logging
LOG_LEVEL=WARNING

# Time Zone
TZ=America/New_York
POSTGRES_TIMEZONE=America/New_York

# Backup
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
